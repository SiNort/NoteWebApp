@model NoteWebApp.Models.Note
@{
    ViewBag.Title = "Display";
}
<form asp-controller="note">
    <input asp-for="Id" value="@Model.Id" type="hidden" />
    <input asp-for="Title" value="@Model.Title" type="hidden" />
    <input asp-for="UserId" value="@Model.UserId" type="hidden" />
    <h3 class="control-label">@Model.Title</h3>
    <div class="validation" asp-validation-summary="All"></div>
    <div class="form-group">
        <textarea type="text" asp-for="Text" class="form-control">@Model.Text</textarea>
    </div>
    <div class="form-group d-flex justify-content-around">
        <input asp-action="edit" type="submit" value="Edit" class="btn btn-dark" />
        <input asp-action="delete" type="submit" value="Delete" class="btn btn-dark" />
    </div>
</form>